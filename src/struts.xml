<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
 "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.multipart.maxSize" value="20971520" />
	
	<package name="default" namespace="/" extends="struts-default">
		<action name="initiate" class="com.healthmonitor.home.InitiateAction">
			<interceptor-ref name="defaultStack"/>
			<result name="success">/home.jsp</result>
		</action>	
	</package>
	
	<package name="data" extends="json-default" namespace="/data" >
		<action name="send_data" class="com.healthmonitor.data.SendData">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
		
		<action name="get_machines" class="com.healthmonitor.data.GetMachines">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
		
		<action name="get_vm_data" class="com.healthmonitor.data.GetVMBasedData">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
	</package>
	
	<package name="config" extends="json-default" namespace="/config" >		
		<action name="add_machine" class="com.healthmonitor.config.AddMachine">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
		
		<action name="remove_machine" class="com.healthmonitor.config.RemoveMachine">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
	</package>
	
	
	<package name="login" extends="json-default" namespace="/login" >
		<action name="login" class="com.healthmonitor.login.SignInAction">
			<interceptor-ref name="defaultStack"/>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
	</package>
</struts>